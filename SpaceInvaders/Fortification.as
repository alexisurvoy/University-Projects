package{		import flash.display.Sprite;		public class Fortification extends Sprite{				private var _hauteur:Number = 25;		private var _largeur:int = 35;		private var _posX:int;		private var _posY:int;		private var _fortification:Sprite;		private var _valeur:Number;				public function Fortification(coordX:int, coordY:int):void{						this._posX = coordX;			this._posY = coordY;						this._fortification = new Sprite();			this._fortification.graphics.beginFill(0xFFFFFF);			this._fortification.graphics.drawRect(this._posX, this._posY, this._largeur, this._hauteur);			this.addChild(this._fortification);					}				public function detruire(valeur:Number):void{			this._valeur=valeur;			this.setHauteur(this._hauteur - valeur);		}				public function setHauteur(i:int){			this._hauteur = i;			this._posY += this._valeur*3;			this.removeChild(this._fortification);			this._fortification = null;			this._fortification = new Sprite();			this._fortification.graphics.beginFill(0xFFFFFF);			this._fortification.graphics.drawRect(this._posX,this._posY, this._largeur, this._hauteur);			this.addChild(this._fortification);		}				public function getHauteur(){			return this._hauteur;		}			}	}