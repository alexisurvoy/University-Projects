package{		import flash.display.Sprite;	import flash.display.Graphics;	import flash.events.Event;    import flash.events.MouseEvent;		public class Missile extends Sprite{				private var _sens:String;		private var _couleur:String;		private var _action:Boolean;		private var _toucherVaisseau:Boolean;		private var _lanceur:*;		private var _vitesseMissile:int = 7;				public function Missile(lanceur:*, pposX:int, pposY:int, pSens:String, couleur:String){						this._lanceur = lanceur;			this._sens = pSens;			this._couleur = couleur;			this._action = false;			this._toucherVaisseau = false;						dessinerMissile();			this.addEventListener(Event.ADDED_TO_STAGE,activer);			this.addEventListener(Event.REMOVED_FROM_STAGE,desactiver);		}		public function activer(pEvt:Event):void{			this.addEventListener(Event.ENTER_FRAME, deplacer);		}		public function desactiver(pEvt:Event):void{						this.removeEventListener(Event.ENTER_FRAME, deplacer);		}				public function dessinerMissile():void{						switch(this._couleur){							case "White":							this.graphics.beginFill(0xffffff);				this.graphics.lineStyle(1, 0xffffff);				this.graphics.drawRect(this.x, this.y, 1, 10);				this.graphics.endFill();				this._action = true;				break;							case "Yellow":									this.graphics.beginFill(0xeeee00);				this.graphics.lineStyle(1, 0xeeee00);				this.graphics.drawRect(this.x, this.y, 2, 10);				this.graphics.endFill();				this._action = true;				break;								case "Blue":									this.graphics.beginFill(0x00ffff);				this.graphics.lineStyle(1, 0x00ffff);				this.graphics.drawRect(this.x, this.y, 2, 10);				this.graphics.endFill();				this._action = true;				break;						case "Red":									this.graphics.beginFill(0xff00000);				this.graphics.lineStyle(1, 0xff00000);				this.graphics.drawRect(this.x, this.y, 2, 10);				this.graphics.endFill();				this._action = true;				break;			}		}						public function deplacer(pEvt:Event):void{			//trace("position missile: x="+this.x+", y="+this.y);			if(this._action == true)				if(this._sens == "HAUT")					{						this.y -= this._vitesseMissile;					}else{						this.y += this._vitesseMissile;					} 		 }		 		 		 public function supprimer():void{						 this.parent.removeChild(this);			  		 }		 		 public function getSens():String{			return this._sens; 		 }		 		 		 	}//end of class	}//end of package