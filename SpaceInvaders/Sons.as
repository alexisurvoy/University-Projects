package {	import flash.media.Sound;	import flash.media.SoundChannel;	import flash.media.SoundTransform;	import flash.net.URLRequest;	import flash.events.*;	public class Sons extends Sound {			private var _canal:SoundChannel;		private var _position:int;		private var _req:URLRequest;		private var _count:int;		private var _volume:Number;		private var _controle:SoundTransform;				public function Sons(volSon:Number):void {			super();			this._count = 2;			this._volume = volSon;		}				public function jouer(urlSon:String){			//trace(urlSon);			_count++;			this._req = new URLRequest(urlSon);			//trace("reg ok"+_count+" "+urlSon);			this.load(this._req);			this._canal = this.play();			//gestion volume;			this._controle = this._canal.soundTransform;			this._controle.volume = this._volume;   			this._canal.soundTransform = this._controle;			//spécifier ici ce qu'on qualifie de son par défaut			if(urlSon == "sons/theme.mp3"){ //le son par défaut passé en paramètre on va le boucler				this._canal.addEventListener(Event.SOUND_COMPLETE, bouclerMusique);			}		}				public function pauseOrPlay(){ //pause ou reprise du son			if(this._count%2 != 0){			this._position = _canal.position;			this._canal.stop();			this._count++;			}else{				this._canal = this.play(_position);				this._count++;				}		}				public function bouclerMusique(e:Event){//bouclage du son			if (_canal != null)			{			this._canal.removeEventListener(Event.SOUND_COMPLETE, bouclerMusique);			this._canal = this.play(0);			this._canal.addEventListener(Event.SOUND_COMPLETE, bouclerMusique);			//jouer(_urlDefaut);			}		}					}//class	}//package